@{
    ViewData["Title"] = "Error";
    Layout = "_Layout";  // Opcional: utiliza el layout principal si tienes uno
}

<div class="container text-center mt-5">
    <h1 class="display-4 text-danger">¡Oops! Algo salió mal.</h1>
    <p class="lead">Ocurrió un error inesperado en el servidor. Por favor, intenta nuevamente más tarde.</p>

    <!-- Mostrar mensaje de error adicional si está disponible -->
    @if (ViewBag.ErrorMessage != null)
    {
        <p class="text-muted">@ViewBag.ErrorMessage</p>
    }

    <a href="/" class="btn btn-primary mt-3">Volver al Inicio</a>
</div>
