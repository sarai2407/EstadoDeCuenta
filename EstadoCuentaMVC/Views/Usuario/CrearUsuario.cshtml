@model UsuarioViewModel

<div class="container mt-5">
    <h3 class="text-center">Crear Usuario</h3>
    @if (ViewBag.Error != null)
    {
        <div class="alert alert-danger">@ViewBag.Error</div>
    }
    <form asp-action="CrearUsuarios" asp-controller="Usuario" method="post" class="mt-4">
        <div class="form-group">
            <label for="Nombre">Nombres</label>
            <input type="text" class="form-control" id="Nombre" name="Nombre" asp-for="Nombre" required />
            <span asp-validation-for="Nombre" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label for="Apellidos">Apellidos</label>
            <input type="text" class="form-control" id="Apellidos" name="Apellidos" asp-for="Apellidos" required />
            <span asp-validation-for="Apellidos" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label for="Telefono">Teléfono</label>
            <input type="tel" class="form-control" id="Telefono" name="Telefono" asp-for="Telefono" required />
            <span asp-validation-for="Telefono" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label for="Email">Email</label>
            <input type="email" class="form-control" id="Email" name="Email" asp-for="Email" required />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label for="Dui">DUI</label>
            <input type="text" class="form-control" id="Dui" name="Dui" asp-for="Dui" required />
            <span asp-validation-for="Dui" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary mt-3">Crear Usuario</button>
    </form>
</div>